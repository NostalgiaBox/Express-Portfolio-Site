extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') â† Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= projectData.projectName

        p.lead.text-light
          | #{projectData.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
        each technology in projectData.technologies
          li= technology

        a.button.expanded(href=`${projectData.live_link}`) Live Demo
        a.button.expanded(href=`${projectData.github_link}`) GitHub Repo
    
    each image_link, i in projectData.image_urls
      if i > 0
        img.image(src=`/static/images/${image_link}`)